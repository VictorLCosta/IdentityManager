@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" href="#">Ol√° @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" method="POST" asp-controller="Account" asp-action="LogOut">
                <button type="submit" class="btn nav-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <a asp-action="Login" asp-controller="Account">Login</a> <a asp-action="Register"
        asp-controller="Account">Registrar</a>
    }
</ul>