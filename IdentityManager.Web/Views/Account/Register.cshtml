@model UserViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="account">
    <div class="bg-white rounded p-5">
        <form asp-action="Register" method="POST">
            <h3 class="mb-4">Criar conta</h3>
            <div class="form-group">
                <input type="text" asp-for="Name" class="form-control" placeholder="Nome">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" placeholder="Senha">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar senha">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-block btn-info mt-4">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial"></partial>
}