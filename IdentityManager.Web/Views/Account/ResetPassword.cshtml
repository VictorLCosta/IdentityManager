@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Redifinir Senha";
}

<div class="account">
    <div class="bg-white rounded p-5">
        <form asp-action="ResetPassword" method="POST">
            <h3 class="mb-4">Redefinir senha</h3>
            <input type="hidden" asp-for="Code">
            <div class="form-group">
                <input type="text" asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" placeholder="Nova senha">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar nova senha">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-block btn-info mt-4">Pronto</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial"></partial>
}